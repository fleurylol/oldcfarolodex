<div class='contact-container'>
  <div class='row'>
    <div class='col-xs-12 col-md-6'>
  <h2><%= @contact.guest_name %></h2>
  <p>Address: <%= @contact.address %></p>
  <p>Phone: <%= @contact.phone %> </p>
  <strong>Notes:</strong>
  <p><%= @contact.notes %></p>

    </div>
    <div class='col-xs-12 col-md-6'>
      <h2><%= @contact.buisness %></h2>
   <% @contact.images.each do |attachment| %>
   <%= image_tag(attachment, class: 'responsive-image')%>
      <%end%>
 </div>
 </div>
</div>
<div style="margin-top:10px;margin-bottom: 10px;">
<%= button_to "Back", contacts_path,:method => :get, class: "btn btn-secondary" %>
</div>
<% if user_signed_in? %>
  <% if current_user.id == @contact.user.id %>
   <div class='button-container'>
    <%= button_to "Edit this contact", edit_contact_path(@contact), :method => :get, class: "btn btn-success" %> 
    <%= button_to "Delete", @contact, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: 'Are you sure?' }}  %>
  </div>
  <% end %>
<% end %>
